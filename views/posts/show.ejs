<h1><%= post.title %> <small>by <%= post.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(post.createdAt).calendar() %></strong>
</p>

<p><%= post.content %></p>

<% post.tags.forEach(function(tag){ %>
  <span class="btn btn-xs btn-info">
    #<%= tag.name %>
  </span>
<% }); %>

<hr />

<h4>Comment on this post</h4>
<form method="POST" action="/posts/<%- post.id %>/comments">
  <div class="form-group">
    <label for="title">Name:</label>
    <input type="text" name="name" class="form-control">
  </div>
  <div class="form-group">
    <label for="price">Content:</label>
    <input type="text" name="content" class="form-control" placeholder="required" required/>
  </div>
  <input type="submit" class="btn btn-success" value="Add"/>
</form>

<hr />

<h3>Comments</h3>
<% post.comments.reverse().forEach(function(comment){ %>
  <div class="well">
    <p>
      <%- comment.content %>
    </p>
    <h5>
      - <%- comment.name %>
    </h5>
  </div>
<% }); %>


<hr />

<a href="/">&larr; Back Home</a>
